<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/colorAccent" android:endColor="@color/colorPrimaryDark" >
            </gradient>
            <corners android:radius="50dp">
            </corners>
            <padding android:bottom="5pt" android:left="6pt" android:right="7pt" android:top="5pt">
            </padding>
            <stroke android:color="@color/colorAccent" android:width="3dp"></stroke>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/btn" android:endColor="@color/btn" >
            </gradient>
            <corners android:radius="50dp">
            </corners>
            <padding android:bottom="5pt" android:left="6pt" android:right="7pt" android:top="5pt">
            </padding>
            <stroke android:color="#767676" android:width="3dp"></stroke>
        </shape>
    </item>
</selector>